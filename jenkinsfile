pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-creds')  // Jenkins stored creds ID
        DOCKERHUB_USER = 'janakiram26'
        IMAGE_NAME = 'website-cicd'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Jaaki26/profile.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    cd app
                    docker build -t $DOCKERHUB_USER/$IMAGE_NAME:\$BUILD_NUMBER .
                    """
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_USER --password-stdin'
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    sh """
                    docker push $DOCKERHUB_USER/$IMAGE_NAME:\$BUILD_NUMBER
                    docker tag $DOCKERHUB_USER/$IMAGE_NAME:\$BUILD_NUMBER $DOCKERHUB_USER/$IMAGE_NAME:latest
                    docker push $DOCKERHUB_USER/$IMAGE_NAME:latest
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh """
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml
                    """
                }
            }
        }
    }
}
